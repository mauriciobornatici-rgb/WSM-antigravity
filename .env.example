# ============================================
# WSM SportsERP - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Frontend (Vite â€” must start with VITE_)
VITE_API_URL=http://localhost:3001

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=
DB_PASSWORD=
DB_NAME=sports_erp
DB_SSL=false
# Keep true in production when MySQL supports TLS with trusted cert chain.
DB_SSL_REJECT_UNAUTHORIZED=true
PORT=3001

# Security
JWT_SECRET=
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Environment
# Allowed values: development | staging | production
NODE_ENV=development
ALLOW_INSECURE_NON_DEV=false

# CORS (comma-separated origins for production)
CORS_ORIGINS=http://localhost:5173
# Trust reverse proxy in production (true/false/number/IP list)
TRUST_PROXY=false

# API rate-limits
# General API limiter (all /api routes except /api/health)
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=1200
# Login limiter (/api/login)
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX=8

# Admin seed (only used on first run if no admin exists)
ADMIN_DEFAULT_PASSWORD=
